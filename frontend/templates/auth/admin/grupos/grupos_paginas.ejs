<!DOCTYPE html>
<html lang="pt-BR">

    <head>
        <% const base = '../../../partials'; %>
        <%- include(`${base}/head`, { title: 'Páginas por Grupo' }) %>
    </head>

    <body>
        <%- include(`${base}/header`) %>

        <main class="container">
            <h1>Páginas do Grupo: <%= group.name %></h1>
            <div id="app"></div>

            <script>
                window.csrfToken = "<%= csrfToken %>";
                window.groupId = <%= group.id %>;
                window.pagesData = <%- JSON.stringify(pages || []) %>;
            </script>
            <script src="/js/auth/grupos/grupos_paginas.js"></script>
        </main>

        <%- include(`${base}/footer`) %>
    </body>

</html>